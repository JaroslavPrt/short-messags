{
  "name": "short-messages",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run prebuild && tsc --project tsconfig.json",
    "start": "node ./dist/main.js",
    "dev": "ts-node ./src/main.ts",
    "dev:watch": "nodemon --exec npm run dev",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "lint-staged": "lint-staged",
    "typeorm:cli": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -f ./src/infrastructure/persistence/config.cli.ts"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/config": "0.0.36",
    "@types/koa": "^2.11.4",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa__router": "^8.0.2",
    "@types/node": "^14.6.3",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.2.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@koa/router": "^9.4.0",
    "class-transformer": "^0.3.1",
    "config": "^3.3.2",
    "koa": "^2.13.0",
    "koa-body": "^4.2.0",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "tsconfig-paths": "^3.9.0",
    "tslog": "^2.9.1",
    "typeorm": "^0.2.25",
    "uuid": "^8.3.1"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged && pretty-quick --staged",
      "pre-push": "npm run lint-staged && pretty-quick --staged"
    }
  }
}
